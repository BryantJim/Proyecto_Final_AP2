@page "/clientes"


<EditForm Model="cliente" OnValidSubmit="Guardar">

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3>
                    Registro clientes
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                    </svg>
                </h3>
            </div>

            <div class="card-body">

                    <div class="form-group">
                        <label>Cliente ID</label>
                        <div class="input-group">
                            <input type="number" @bind="cliente.ClienteId" class="form-control col-3" />
                            <div class="input-group-append">
                                <button @onclick="Buscar" class="btn btn-outline-primary input-group-text">
                                    Buscar
                                    <svg width="2em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z"></path>
                                        <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="">

                    </div>
                    <div class="form-group mb-2">
                        <label class="mr-3">Nombres</label>
                        <input type="text" class="form-control" placeholder="Nombre completo" />
                    </div>

            </div>
        </div>
    </div>
</EditForm>

@code
{
    Clientes cliente = new Clientes();

    public async Task Guardar() { }

    public async Task Buscar() { }
}
